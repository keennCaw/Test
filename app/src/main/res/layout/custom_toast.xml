<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toast_layout">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/toast_background"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="@color/bruntwork_orange"
        app:strokeColor="@color/bruntwork_black"
        app:strokeWidth="4dp"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        app:shapeAppearanceOverlay="@style/ImageView.BruntWork.CornerSize20dp"
        />
    <TextView
        android:id="@+id/toast_message"
        android:layout_alignTop="@+id/toast_background"
        android:layout_margin="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Fur-neck Jacket has been added to your cart."
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/toast_close"
        android:layout_alignTop="@+id/toast_background"
        android:layout_alignRight="@+id/toast_background"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_close_24"
        android:tint="@color/black"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:shapeAppearanceOverlay="@style/circleImageView" />

</RelativeLayout>