<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.BruntWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ImageView.BruntWork.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Widget.BruntWork.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">true</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@drawable/bg_chip_state_list</item>
        <item name="checkedIcon">@drawable/ic_baseline_close_24</item>
        <item name="elevationOverlayEnabled">true</item>
    </style>

    <style name="Widget.BruntWork.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/add_button_layer</item>
        <item name="android:backgroundTint">@color/bruntwork_orange</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.BruntWork.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.BruntWork.Button.Pay" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/bruntwork_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>